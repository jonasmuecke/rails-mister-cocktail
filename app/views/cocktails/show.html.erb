<div class="card-category" style="background-image: url('<%= cl_image_path @cocktail.photo.key, height: 500, width: 1000, crop: :fill %>')">
<h1><%= @cocktail.name %></h1>
</div>
<div class="text">
<div class="description">
<h2>Description</h2>
<p><%= @cocktail.description %></p>
</div>
<div class="ingredients">
<h3>Ingredients</h3>
<% @cocktail.doses.each do |dose| %>
<div class="ingred">
<p><%= dose.description %> | <%= dose.ingredient.name %></p>
<%= link_to 'delete', dose_path(dose), method: :delete %>
</div>
<% end %>
<%= link_to 'Add Ingredient +', new_cocktail_dose_url(@cocktail) %>
</div>
</div>
<%= link_to 'Back', cocktails_path, class: 'link-page-before' %> |
